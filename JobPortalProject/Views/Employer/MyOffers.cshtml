@model IEnumerable<OfferViewModel>

@{
    ViewData["Title"] = $"My offers";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<div class="text-center row">
    @foreach (var offer in Model)
    {
        <div class="card col-4">
            <div class="card-body">
                <p><strong>@offer.Title</strong></p>
                <p>Created on: @offer.CreatedOn</p>
                <p>Salary: @offer.Salary lv.</p>
                <p>Location: @offer.Location</p>
                <p>Seniority: @offer.Seniority</p>
                <div class="card col-15">
                    <p><strong>Description:</strong></p>
                    <p>@offer.Description</p>
                </div>
                <br />
                <a asp-route-offerId="@offer.Id" asp-controller="Employer" asp-action="AppliedEmployees" class="btn btn-primary">Applied employees</a>
                <a asp-route-offerId="@offer.Id" asp-controller="Employer" asp-action="EditOffer" class="btn btn-warning">Edit</a>
                <a asp-route-offerId="@offer.Id" asp-controller="Employer" asp-action="DeleteOffer" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
